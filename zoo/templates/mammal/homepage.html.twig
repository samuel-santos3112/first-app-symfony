{% extends "base.html.twig" %}
{% block title%}
    Mamíferos
{% endblock %}
{% block body%}
    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel" >
        <ol class="carousel-indicators" style="">
            {% for key, anims in animais %}
                {% if key == 0 %}
                    <li data-bs-target="#myCarousel" data-bs-slide-to="{{ key }}" class="active"></li>
                {% else %}
                    <li data-bs-target="#myCarousel" data-bs-slide-to="{{ key }}"></li>
                {% endif %}
            {% endfor %}
            <li data-bs-target="#myCarousel" data-bs-slide-to="{{ animais|length }}"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#777"></rect></svg>

                <div class="container" >
                    <div class="carousel-caption text-start" >
                        <h1>Zoológico</h1>
                        <p>Mamíferos</p>
                    </div>
                </div>
            </div>
            {% for anim in animais %}
            <div class="carousel-item">
                <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#777"></rect></svg>
                <div class="container">
                    <div class="carousel-caption">
                        <h2>{{ anim }}</h2>
                        <a class="btn btn-secondary" href="{{ path('app_mammal_details', {slug : anim}) }}" style="background-color: #4169e1; margin-top: 25px;">Detalhes »</a>
                    </div>
                </div>
            </div>
            {% endfor %}  
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="visually-hidden">Next</span>
        <span  class="carousel-control-next-icon" aria-hidden="true"></span>
        
        </button>
    </div>

{% endblock %}

